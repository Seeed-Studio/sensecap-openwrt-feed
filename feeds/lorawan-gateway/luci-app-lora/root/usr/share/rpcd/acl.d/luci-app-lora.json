{
    "luci-app-lora": {
        "description": "Grant UCI access to lora configuration",
        "read": {
			"file": {
				"/tmp/lora/log": [
					"read"
				],
				"/etc/device_eui": [
					"read"
				]
			},
            "ubus": {
                "uci": [
                    "get"
                ]
            },
            "uci": [
                "lora",
                "lora-basicstation",
                "chirpstack",
                "chirpstack-concentratord",
                "chirpstack-udp-forwarder",
                "chirpstack-mqtt-forwarder"
            ]
        },
        "write": {
            "ubus": {
                "uci": [
                    "set"
                ]
            },
            "uci": [
                "lora",
                "lora-basicstation",
                "chirpstack",
                "chirpstack-concentratord",
                "chirpstack-udp-forwarder",
                "chirpstack-mqtt-forwarder"
            ]
        }
    }
}
