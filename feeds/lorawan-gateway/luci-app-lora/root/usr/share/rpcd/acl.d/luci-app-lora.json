{
    "luci-app-lora": {
        "description": "Grant UCI access to lora configuration",
        "read": {
            "file": {
                "/tmp/lora/log": [
                    "read"
                ],
                "/sbin/logread": [
                    "exec"
                ],
                "/etc/device_eui": [
                    "read"
                ]
            },
            "ubus": {
                "uci": [
                    "get"
                ],
                "luci": [
                    "getInitList"
                ],
                "sensecap": [
                    "*"
                ]
            },
            "uci": [
                "lora",
                "basicstation",
                "packetforwarder"
            ]
        },
        "write": {
            "file": {
                "/etc/init.d/lora_pkt_fwd": [
                    "exec"
                ],
                "/etc/init.d/station": [
                    "exec"
                ],
                "/etc/init.d/chirpstack-gateway-bridge": [
                    "exec"
                ]
            },
            "ubus": {
                "uci": [
                    "set",
                    "commit"
                ],
                "luci": [
                    "setInitAction"
                ]
            },
            "uci": [
                "lora",
                "basicstation",
                "packetforwarder"
            ]
        }
    }
}
