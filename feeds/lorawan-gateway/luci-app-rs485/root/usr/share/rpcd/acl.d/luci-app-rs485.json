{
	"luci-app-rs485": {
		"description": "Grant access to rs485 configuration",
		"read": {
			"file": {
				"/tmp/rs485/log": [
					"read"
				],
                                "/tmp/rs485/modbus_result": [
					"read"
				]
			},
			"ubus": {
				"uci": [
					"get"
				],
                                "file": [
                                        "exec",
                                        "read"
				]
			},
			"uci": [
				"rs485-module"
			]
		},
		"write": {
			"ubus": {
				"uci": [
					"set"
				],
                                "file": [
                                        "exec",
                                        "write"
				]
			},
			"uci": [
				"rs485-module"
			],
                        "file": {
                                "/tmp/rs485/*": [
                                        "write"
                                ]
			}
		}
	}
}