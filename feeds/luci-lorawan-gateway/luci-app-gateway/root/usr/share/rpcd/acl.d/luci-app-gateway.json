{
    "luci-app-gateway": {
        "description": "Grant UCI access to gateway configuration",
        "read": {
            "ubus": {
                "uci": [
                    "get"
                ],
                "sensecap": [
                    "reboot_host",
                    "shutdown_host"
                ]
            },
            "file": {
                "/etc/deviceinfo/sn": [
                    "read"
                ],
                "/etc/deviceinfo/eui": [
                    "read"
                ],
                "/etc/deviceinfo/freq_plan": [
                    "read"
                ],
                "/version.txt": [
                    "read"
                ],
                "/bin/cat /etc/deviceinfo/sn": [
                    "exec"
                ],
                "/bin/cat /etc/deviceinfo/eui": [
                    "exec"
                ],
                "/bin/cat /etc/deviceinfo/freq_plan": [
                    "exec"
                ],
                "/bin/cat /version.txt": [
                    "exec"
                ]
            }
        },
        "write": {
            "ubus": {
                "uci": [
                    "set",
                    "commit"
                ],
                "sensecap": [
                    "reboot_host",
                    "shutdown_host"
                ]
            }
        }
    }
}
